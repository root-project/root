<mvc:View
   class="sapUiSizeCompact"
   height="100%" width="100%"
   controllerName="rootui5.eve7.controller.Lego"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:l="sap.ui.layout"
   xmlns="sap.m"
   xmlns:html="http://www.w3.org/1999/xhtml"
   >
   <Toolbar id="tbar">
      <content>
         <Label text="Lego" id="titleLabel" width="100%" textAlign="Center"/>
         <Button icon="sap-icon://move" press="switchSingle" tooltip="single view"/>
         <Button icon="sap-icon://arrow-right" press="swap" tooltip="swap"/>
         <Button icon="sap-icon://decline" press="detachViewer" tooltip="destroy"/>
      </content>
   </Toolbar>
    <Panel id="legoPanel" width="100%" height="100%">
        <content>
           <html:div id="legoPlotPlace" style="position:relative;left:0;right:0;top:0;bottom:0;height:100%;width:100%"/>
        </content>
    </Panel>
</mvc:View>
