<mvc:View height="100%" width="100%"
   class="sapUiSizeCompact sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter"
   controllerName="rootui5.tree.controller.TreeViewer"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout"
   xmlns:t="sap.ui.table">
   <Page id="treeViewerPage" title="Tree viewer: {/fTreeName}" showNavButton="false" floatingFooter="true"
       showFooter="true" showSubHeader="false" showHeader="false" class="sapUiStdPage">
       <content>
          <VBox width="100%">
            <Label text="X:" labelFor="input_x"/>
            <Input
              id="input_x"
              value="{/fExprX}"
              placeholder="Input x expression"
              showSuggestion="true"
              showValueHelp="true"
              valueHelpRequest=".onBranchHelpRequest"
              suggestionItems="{/fBranches}">
              <suggestionItems>
                 <core:Item text="{fName}"/>
              </suggestionItems>
            </Input>
            <Label text="Y:" labelFor="input_y"/>
            <Input
              id="input_y"
              value="{/fExprY}"
              placeholder="Input y expression"
              showSuggestion="true"
              showValueHelp="true"
              valueHelpRequest=".onBranchHelpRequest"
              suggestionItems="{/fBranches}">
              <suggestionItems>
                 <core:Item text="{fName}"/>
              </suggestionItems>
            </Input>
            <Label text="Z:" labelFor="input_z"/>
            <Input
              id="input_z"
              value="{/fExprZ}"
              placeholder="Input z expression"
              showSuggestion="true"
              showValueHelp="true"
              valueHelpRequest=".onBranchHelpRequest"
              suggestionItems="{/fBranches}">
              <suggestionItems>
                 <core:Item text="{fName}"/>
              </suggestionItems>
            </Input>
            <Label text="Cut:" labelFor="input_cut"/>
            <Input
              id="input_cut"
              value="{/fExprCut}"
              placeholder="Input cut expression"
              showSuggestion="true"
              showValueHelp="true"
              valueHelpRequest=".onBranchHelpRequest"
              suggestionItems="{/fBranches}">
              <suggestionItems>
                 <core:Item text="{fName}"/>
              </suggestionItems>
            </Input>
            <Label text="Options:" labelFor="input_option"/>
            <Input id="input_option" value="{/fOption}" placeholder="Input options"/>
            <Label text="Entries:" labelFor="input_number"/>
            <HBox width="100%">
               <StepInput
                  id="input_number"
                  class="sapUiSizeCompact"
                  min="0"
                  max="{/fTreeEntries}"
                  step="{/fStep}"
                  largerStep="{/fLargerStep}"
                  value="{/fNumber}"
                  placeholder="Number of entries"
                  tooltip="Number of entries, 0 - all entries, maximum is {/fTreeEntries}"/>
               <StepInput
                  id="input_first"
                  class="sapUiSizeCompact"
                  min="0"
                  max="{/fTreeEntries}"
                  step="{/fStep}"
                  largerStep="{/fLargerStep}"
                  value="{/fFirst}"
                  placeholder="First entry"
                  tooltip="First entry, default - 0, maximum is {= ${/fTreeEntries} - 1}"/>
            </HBox>
            <ProgressIndicator
                id="draw_progress"
                class="sapUiSmallMarginBottom"
                percentValue="0"
                displayValue="0%"
                showValue="false"
                state="None"
                visible="false"/>
          </VBox>
       </content>

       <footer>
         <OverflowToolbar>
            <ToolbarSpacer/>
            <Button type="Accept" text="Draw" press="performDraw" enabled="{= ${/fExprX} !== &apos;&apos; }"/>
            <Button id="quitButton" type="Reject" text="Quit" press="onQuitRootPress"/>
         </OverflowToolbar>
      </footer>
   </Page>
</mvc:View>
