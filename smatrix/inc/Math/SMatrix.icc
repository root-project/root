template <class T, unsigned int D1, unsigned int D2, class R>
template <class InputIterator>
SMatrix<T,D1,D2,R>::SMatrix(InputIterator begin, InputIterator end, bool triang, bool lower) {
  for(unsigned int i=0; i<R::kSize; ++i) fRep.Array()[i] = 0;
  AssignItr<T,D1,D2,R>::Evaluate(*this,begin,end,triang,lower); 
}

template <class T, unsigned int D1, unsigned int D2, class R>
template <class InputIterator>
SMatrix<T,D1,D2,R>::SMatrix(InputIterator begin, unsigned int size, bool triang, bool lower) {
  for(unsigned int i=0; i<R::kSize; ++i) fRep.Array()[i] = 0;
  AssignItr<T,D1,D2,R>::Evaluate(*this,begin,begin+size,triang,lower); 
}


