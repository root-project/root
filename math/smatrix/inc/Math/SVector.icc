template <class T, unsigned int D>
bool SVector<T,D>::operator==(const T& rhs) const {
   bool rc = true;
   for(unsigned int i=0; i<D; ++i) {
      rc = rc && (fArray[i] == rhs);
   }
   return rc;
}

