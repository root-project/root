//==============================================================================
template <class T, unsigned int D>
SVector<T,D>::SVector() {
   for(unsigned int i=0; i<D; ++i)
      fArray[i] = 0;
}

template <class T, unsigned int D>
template <class A>
SVector<T,D>::SVector(const VecExpr<A,T,D>& rhs) {
   operator=(rhs);
}

template <class T, unsigned int D>
SVector<T,D>::SVector(const SVector<T,D>& rhs) {
   for(unsigned int i=0; i<D; ++i)
      fArray[i] = rhs.fArray[i];
}



