<core:View
   controllerName="eve.EveTable"
   xmlns:core="sap.ui.core"
   xmlns="sap.uxap"
   xmlns:layout="sap.ui.layout"
   xmlns:m="sap.m"
   xmlns:table="sap.ui.table"
   xmlns:f="sap.ui.layout.form"
   height="100%">

   <ObjectPageHeaderContent id="header" >
      <content>
        <layout:VerticalLayout>
          <m:Label text="Choose Collection:" />
	  <m:ComboBox id="ccombo" change="collectionChanged"
                                enabled="false"
				items="{
				       path: 'collections>/itemx'
				}">
				<core:Item key="{collections>key}" text="{collections>text}" />
			</m:ComboBox>
         </layout:VerticalLayout>
         <layout:VerticalLayout>
           <m:Label text="Edit table:" />
            <m:Button icon="sap-icon://edit"
                                          press="toggleTableEdit"
                                          tooltip="toggle table edit"/>

         </layout:VerticalLayout>
                        <!--
                        <layout:VerticalLayout id="tableEdit" width="97%">
                          <m:Input placeholder="Title" width="100%"/>
                          <m:Input placeholder="Expression"  />
                        <layout:HorizontalLayout>
                          <m:Button text="Add"/>
                          <m:Button text="Delete"/>
                          <m:Button text="Modify"/>
        </layout:HorizontalLayout>
                        </layout:VerticalLayout>
                -->
      </content>
   </ObjectPageHeaderContent>

        <m:VBox id="tbody" >
          <table:Table id="table"
              class="sapUiNoMarginTop"
              selectionMode="None"
              editable="false"
              height="100%"
              rowHeight="25"
              minAutoRowCount="100"
              showColumnVisibilityMenu="true"
              visibleRowCountMode="Auto"
            />
        </m:VBox>
</core:View>
